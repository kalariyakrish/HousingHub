<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginHorizontal="20dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:maxWidth="280dp">

            <!-- Property Image Placeholder -->
            <ImageView
                android:id="@+id/ivPropertyImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#CCCCCC"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Property Title -->
            <TextView
                android:id="@+id/tvPropertyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2BHK Apartment in Koramangala"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <!-- Property Location -->
            <TextView
                android:id="@+id/tvPropertyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Koramangala, Bangalore"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <!-- Property Price -->
            <TextView
                android:id="@+id/tvPropertyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹25,000/month"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:layout_marginBottom="8dp" />

            <!-- View Property Button -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Property Details"
                android:textSize="12sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_4dp"
                android:padding="6dp"
                android:layout_gravity="end" />

            <!-- Time -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textSize="11sp"
                android:textColor="#999999"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
