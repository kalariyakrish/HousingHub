<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Picture Placeholder -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvProfileInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1E88E5"
                    android:gravity="center"
                    android:text="AB"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!-- Online Indicator -->
            <View
                android:id="@+id/ivOnlineIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/circle_green"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Chat Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvChatName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tvMessageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2m ago"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

            <!-- Property Info -->
            <TextView
                android:id="@+id/tvPropertyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2BHK Apartment"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvPropertyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Koramangala, Bangalore"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Last Message -->
            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hey, is this property still available?"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Unread Count Badge -->
        <TextView
            android:id="@+id/tvUnreadCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
